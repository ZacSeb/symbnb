{% extends 'base.html.twig' %}

{% block title %}
    Modification du mot de passe
{% endblock %}

{% block body %}

    <div class="container" style="padding-top:9%; padding-bottom:9%;">
        <h1 class="mb-5" style="text-align: center;">Modification du mot de passe</h1>
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    {{ form_start(form) }}
