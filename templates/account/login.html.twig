{% extends 'base.html.twig' %}

{% block title %}
    Connexion au site
{% endblock %}

{% block body %}
    <div class="container" style="padding-top:11%; padding-bottom:11%;">

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3" style="border: 1px solid grey; border-radius: 5px 5px 5px 5px;">
                    <h1 class="mb-2">Connectez-vous !</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue, l'email ou le mot de passe est invalide !</div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="POST">
                        <div class="form-group mt-3">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{username}}">
                        </div>
                        <div class="form-group mt-3">
                            <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password" placeholder="Mot de passe..." class="form-control" required>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
        